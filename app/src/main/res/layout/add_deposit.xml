<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:text="Make Payment"
                android:textColor="@color/black"
                fontPath = "fonts/NirmalaB.ttf"
                />
            <TextView
                android:id="@+id/fees_tv"
                android:alpha=".5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="You are to pay now"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/fees_tv1"
                android:alpha=".5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="PLEASE NOTE: All payments are refundable"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/blue08"
                >
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

             </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginTop="20dp"
        style="?attr/buttonStyleSmall"
        android:background="@drawable/curve_brown"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/pay"
        >

        <TextView
            android:id="@+id/pay_tv"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Securely Pay (N3,500)"
            android:textSize="18sp"
            android:layout_gravity="center"
            fontPath = "fonts/NirmalaB.ttf"
            />


    </FrameLayout>
    <TextView

        android:visibility="invisible"
        android:id="@+id/skip"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SKIP FOR NOW"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:gravity="center"

        />

    </LinearLayout>


