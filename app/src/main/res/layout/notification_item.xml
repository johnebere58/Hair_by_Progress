<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="MissingPrefix"
    android:id="@+id/rootView"
    >
    <LinearLayout
        android:id="@+id/main_layout"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_blue3"
                android:src="@drawable/ic_user1"
                android:tint="@color/white"
                android:padding="15dp"
                android:alpha=".5"
                />
            <com.hairbyprogress.custom.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher"
                />

        </FrameLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/name_tv"
                    fontPath="fonts/NirmalaB.ttf"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your opinion has received 5 Stars and 2 Replies"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/story_holder"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/blue08"
                >
                <TextView

                    android:layout_gravity="center"
                    android:alpha=".5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Story"
                    android:textColor="@color/blue0"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/story_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House cleaning with goko cleanser for  cleaning with goko cleanser for free"
                    android:textColor="@color/blue6"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/opinion_holder"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/blue08"
                >
                <TextView

                    android:layout_gravity="center"
                    android:alpha=".5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opinion"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/opinion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I thin you should go and kill yourself"
                    android:textColor="@color/dark_green3"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"

                    />

            </LinearLayout>


            <com.hairbyprogress.custom.RelativeTimeTextView
                android:id="@+id/time_tv"
                android:layout_gravity="center"
                android:alpha=".5"
                fontPath="fonts/NirmalaB.ttf"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 min ago"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:alpha=".1"
        android:background="@color/black"
        />
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/padding"
        />

</LinearLayout>
