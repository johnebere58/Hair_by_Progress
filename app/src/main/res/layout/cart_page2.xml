<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_deliver"
            android:alpha=".5"
            android:tint="@color/brown0"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Items will be delivered within 1 - 14 Days"
            android:textColor="@color/brown0"
            fontPath = "fonts/NirmalaB.ttf"
            android:textSize="12sp" />

    </LinearLayout>

    <com.hairbyprogress.recyclerview.MyRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/rsv"
        android:background="@color/default_white"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:alpha=".3"
        />
    <LinearLayout
        android:id="@+id/add_but"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/black_stoke_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        style="?attr/buttonStyleSmall"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="ADD NEW ADDRESS"
            android:textColor="@color/brown03"
            fontPath = "fonts/NirmalaB.ttf"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_add"
            android:alpha=".5"
            android:tint="@color/brown0"
            />

    </LinearLayout>

</LinearLayout>
