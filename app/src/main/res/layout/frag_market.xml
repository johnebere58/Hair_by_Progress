<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown0"
        >

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <ImageView

                android:background="@drawable/circle_brown6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:src="@drawable/ic_plain"
                android:padding="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:text="Hair by Progress"
                android:textColor="@color/white"
                android:layout_weight="1"
                fontPath = "fonts/NirmalaB.ttf"
                />
            <ImageView
                android:id="@+id/search_but"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:src="@drawable/ic_search"
                android:layout_marginLeft="15dp"
                android:padding="14dp"
                android:clickable="true"

                android:background="?attr/selectableItemBackground"
                />
            <LinearLayout
                android:visibility="gone"
                style="?attr/buttonStyleSmall"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/curve_blue02"
                android:clickable="true"
                >

                <TextView
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="GUIDE"
                    android:textSize="12sp"
                    android:layout_gravity="center"

                    android:textColor="@color/white"

                    />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_about"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/curve_brown_1"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:src="@drawable/ic_search"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/search_but"
                android:alpha=".5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Search hair, wigs, accessories"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:clickable="true"

                android:background="?attr/selectableItemBackground"
                />

        </LinearLayout>
        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/viewpagertab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clipToPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            app:stl_defaultTabTextColor="@color/white"
            app:stl_defaultTabTextHorizontalPadding="18dp"
            app:stl_dividerColor="@color/transparent"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="@color/brown6"
            app:stl_indicatorCornerRadius="18dp"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="36dp"
            app:stl_underlineColor="@color/transparent"
            app:stl_underlineThickness="0dp"
            fontPath = "fonts/NirmalaB.ttf"
            />

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />


</LinearLayout>
