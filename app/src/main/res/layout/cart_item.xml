<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/default_white"
    >
    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/main_layout"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <me.xiaopan.sketch.SketchImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_top_vp"
                    android:scaleType="centerCrop"
                    android:id="@+id/imv"
                    />

                <ImageView
                    android:id="@+id/remove"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_gravity="right"
                    android:background="@drawable/white_button"
                    android:clickable="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_close"
                    android:tint="@color/brown0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/num_tv"
                    android:background="@color/white"
                    android:padding="6dp"
                    android:textColor="@color/brown0"
                    android:text="Item 1"
                    fontPath = "fonts/NirmalaB.ttf"
                    android:textSize="13sp"
                    />
            </FrameLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Customized Straight Hair"
                android:textColor="@color/black"
                android:id="@+id/desc_tv"
                android:maxLines="3"
                />
            <TextView
                android:alpha=".5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Hair Bundles - 3, Hair Length - 22, Hair Gram - 120"
                android:textColor="@color/black"
                android:id="@+id/desc_tv1"
                android:maxLines="3"
                />


            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:alpha=".3"
                android:background="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    fontPath = "fonts/NirmalaB.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="N4,500"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:id="@+id/price_tv"
                    />

                <TextView
                    android:alpha=".5"
                    fontPath = "fonts/NirmalaB.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="X"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    />

                <TextView
                    android:background="@color/default_white"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="12sp"
                    android:inputType="number"
                    android:id="@+id/quantity_tv"
                    />
                <TextView
                    android:alpha=".5"
                    fontPath = "fonts/NirmalaB.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="="
                    android:textColor="@color/black"
                    android:padding="10dp"
                    />
                <TextView

                    fontPath = "fonts/NirmalaB.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="@color/default_white"
                    android:text="N0"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:id="@+id/total_tv"
                    />



            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/add_but"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/black_stoke_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        style="?attr/buttonStyleSmall"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="ADD"
            android:textColor="@color/brown03"
            fontPath = "fonts/NirmalaB.ttf"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_cart"
            android:alpha=".5"
            android:tint="@color/brown0"
            />

    </LinearLayout>

</LinearLayout>
