<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/default_white"
    android:id="@+id/main_layout"
    >

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_gravity="center"
        android:background="@drawable/circle_blue07"
        android:id="@+id/check"
        />

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Address 1"
                    android:textColor="@color/brown0"
                    android:id="@+id/title_tv"
                    android:maxLines="3"
                    fontPath = "fonts/NirmalaB.ttf"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:alpha=".5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Full Name"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="17 Agbor Street Obiaruku"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        android:id="@+id/name_tv"
                        />


                </LinearLayout>

 <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:alpha=".5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Phone"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:id="@+id/phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="17 Agbor Street Obiaruku"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        />


                </LinearLayout>

 <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:alpha=".5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Street Address"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:id="@+id/street_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="17 Agbor Street Obiaruku"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        />


                </LinearLayout>

 <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:alpha=".5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="City"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:id="@+id/city_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="17 Agbor Street Obiaruku"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        />


                </LinearLayout>

 <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:alpha=".5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="State"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:id="@+id/state_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="17 Agbor Street Obiaruku"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        />


                </LinearLayout>



            </LinearLayout>

            <ImageView
                android:id="@+id/edit_but"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/white_button"
                android:clickable="true"
                android:padding="12dp"
                android:src="@drawable/ic_3_dots"
                android:tint="@color/brown0" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
