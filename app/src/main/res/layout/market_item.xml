<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardElevation="1dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/default_white"
        >
        <me.xiaopan.sketch.SketchImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:scaleType="centerCrop"
            android:id="@+id/imv"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_line"
            android:alpha=".5"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="New Brazillian Straight Hair"
                android:textColor="@color/white"
                android:id="@+id/desc_tv"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/price_tv"
                android:layout_marginTop="2dp"
                android:alpha=".7"
                fontPath = "fonts/NirmalaB.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="$15"
                android:textColor="@color/white"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/add_but"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/black_stoke_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        style="?attr/buttonStyleSmall"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="@color/brown03"
            fontPath = "fonts/NirmalaB.ttf"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_cart"
            android:alpha=".5"
            android:tint="@color/brown0"
            />

    </LinearLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/padding"
    android:visibility="gone"
    />


</LinearLayout>
