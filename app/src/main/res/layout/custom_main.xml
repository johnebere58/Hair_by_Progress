<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/brown0"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix"
    >
   <LinearLayout
       android:layout_marginRight="20dp"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:orientation="horizontal"
       >
      <ImageView
          android:layout_gravity="center"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:onClick="clickBack"
          android:tint="@color/white"
          android:src="@drawable/ic_back"
          android:padding="15dp"
          android:layout_width="50dp"
          android:layout_height="50dp" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="25sp"
          android:layout_gravity="center"
          android:text="@string/customized"
          android:textColor="@color/white"
          fontPath = "fonts/NirmalaB.ttf"
          android:maxLines="1"
          />
   </LinearLayout>


   <com.hairbyprogress.custom.CustomViewPager
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/vp"
       android:layout_weight="1"
       />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <LinearLayout
          android:layout_weight="1"
          android:id="@+id/tab"
         android:layout_gravity="center"
          android:layout_marginLeft="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
         <View
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:background="@drawable/circle"
             android:layout_marginRight="5dp"
             />
         <View
             android:alpha=".3"
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:background="@drawable/circle1"
             android:layout_marginRight="5dp"
             />

         <View
             android:alpha=".3"
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:background="@drawable/circle1"
             android:layout_marginRight="5dp"
             />

         <View
             android:alpha=".3"
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:background="@drawable/circle1"
             android:layout_marginRight="5dp"
             />

 <View
             android:alpha=".3"
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:background="@drawable/circle1"
     android:layout_marginRight="5dp"
             />

 <View
             android:alpha=".3"
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:background="@drawable/circle1"
     android:layout_marginRight="5dp"
             />


      </LinearLayout>
      <LinearLayout

          android:layout_marginBottom="20dp"
          android:layout_marginRight="20dp"
          android:id="@+id/next"
          android:clickable="true"
          android:layout_marginTop="20dp"
          style="?attr/buttonStyleSmall"
          android:background="@drawable/curve_white"
          android:layout_width="150dp"
          android:layout_height="50dp"
          android:orientation="horizontal"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          >

         <TextView
             android:textColor="@color/brown0"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/next"
             android:textSize="18sp"
             android:layout_gravity="center"
             fontPath = "fonts/NirmalaB.ttf"
             android:id="@+id/add_tv"

             />
         <ImageView
             android:visibility="gone"
             android:layout_marginLeft="5dp"
             android:layout_width="18dp"
             android:layout_height="18dp"
             android:src="@drawable/ic_cart"
             android:alpha=".5"
             android:tint="@color/brown0"
             android:id="@+id/add_icon"
             />

      </LinearLayout>
   </LinearLayout>

</LinearLayout>
